# Compiler and flags
CC = gcc
CFLAGS = -Wall -Wextra -O2

# Directories and files
SRCDIR = src
OBJDIR = obj
BINDIR = bin
SOURCES = $(wildcard $(SRCDIR)/*.c)
OBJECTS = $(SOURCES:$(SRCDIR)/%.c=$(OBJDIR)/%.o)
TARGET = $(BINDIR)/main

# Dependencies
DEPS = $(OBJECTS:.o=.d)

# Compile and link
$(TARGET): $(OBJECTS)
	$(CC) $(CFLAGS) -o $@ $^

# Compile object files
$(OBJDIR)/%.o: $(SRCDIR)/%.c
	$(CC) $(CFLAGS) -c -o $@ $<

# Generate dependencies
%.d: %.c
	$(CC) $(CFLAGS) -MM -o $@ $<

# Phony targets
.PHONY: clean
clean:
	rm -rf $(OBJDIR) $(BINDIR)

-include $(DEPS)
